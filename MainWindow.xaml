<Window x:Class="praktika18.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:praktika18"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid Height="70" VerticalAlignment="Top" Background="#0c73fe">
            <Image Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5"/>
            <Label VerticalAlignment="Center" HorizontalAlignment="Left"
                   Content="Управление авиалиниями" Foreground="White" FontSize="12" Margin="70,0,0,0"/>
            <Button Click="Exit" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Content="Выйти" Margin="0,10,5,0"/>
        </Grid>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
