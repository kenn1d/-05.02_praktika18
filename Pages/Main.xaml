<Page x:Class="praktika18.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika18.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="700"
      Title="Main">

    <Grid Background="#0c73fe">
        <Label Content="Поиск дешёвых авиабилетов" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Foreground="White" FontWeight="Bold" Margin="0,40,0,0"/>
        <Label Content="Лучший способ купить авиабилеты дёшево" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Foreground="White" Margin="0,71,0,0"/>
        <Label Content="Откуда:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Foreground="White" Margin="0,102,0,0" Width="330"/>
        <TextBox x:Name="from" Width="330" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,138,0,0" Foreground="Black"/>
        <Label Content="Куда:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Foreground="White" Margin="0,168,0,0" Width="330"/>
        <TextBox x:Name="to" Width="330" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,204,0,0" Foreground="Black"/>
        <Button Click="Search" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="24" Content="Найти" Margin="415,234,0,0"
                Background="#FF4000" Foreground="White" BorderBrush="#FFFF4000"/>
    </Grid>
</Page>
