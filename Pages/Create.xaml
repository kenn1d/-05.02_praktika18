<Page x:Class="praktika18.Pages.Create"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika18.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Create">

    <Grid Background="#0c73fe">
        <Label Content="Откуда:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Foreground="White" Margin="60,129,0,0" Width="330"/>
        <TextBox x:Name="from" Width="330" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,165,0,0" Foreground="Black"/>
        <Label Content="Куда:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Foreground="White" Margin="60,195,0,0" Width="330"/>
        <TextBox x:Name="to" Width="330" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,231,0,0" Foreground="Black"/>
        <Label Content="Дата вылета:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Foreground="White" Margin="400,129,0,0" Width="330"/>
        <TextBox x:Name="timeStart" Width="330" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,165,0,0" Foreground="Black"/>
        <TextBox x:Name="timeEnd" Width="330" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,231,0,0" Foreground="Black"/>
        <Label Content="Дата прибытия:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Foreground="White" Margin="400,195,0,0" Width="330"/>
        <Button Click="OK" Content="Сохранить" Background="#FF4000" Height="24" Width="100" Foreground="White" 
                VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="#FFFF4000" Margin="630,297,0,0"/>
        <Label Content="Цена:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Foreground="White" Margin="60,261,0,0" Width="330"/>
        <TextBox x:Name="price" Width="330" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,297,0,0" Foreground="Black"/>
    </Grid>
</Page>
